<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageButton
        android:id="@+id/reset_to_default"
        android:src="@drawable/ic_exit_to_app_black_24dp"
        android:layout_weight="1"
        android:contentDescription="@string/reset_to_default_description"
        style="@style/SelectBrightnessButton"
        />

    <ImageButton
        android:id="@+id/off"
        android:src="@drawable/btn_off"
        android:layout_weight="2"
        android:contentDescription="@string/brightness_off_description"
        style="@style/SelectBrightnessButton"
        />

    <ImageButton
        android:id="@+id/dim"
        android:src="@drawable/ic_brightness_medium_black_24dp"
        android:layout_weight="2"
        android:contentDescription="@string/brightness_dim_description"
        style="@style/SelectBrightnessButton"
        />

    <ImageButton
        android:id="@+id/bright"
        android:src="@drawable/ic_brightness_high_black_24dp"
        android:layout_weight="2"
        android:contentDescription="@string/brightness_bright_description"
        style="@style/SelectBrightnessButton"
        />

</LinearLayout>
